@model Nop.Web.Areas.Admin.Models.Hotels.HotelModel

@using Nop.Core.Domain.Hotels
@using Nop.Services
@using Nop.Services.Stores
@using Nop.Web.Areas.Admin.Models.Hotels

<div class="panel-body">
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="AccountCode" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="AccountCode" />
            <span asp-validation-for="AccountCode"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="AccountName" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="AccountName" />
            <span asp-validation-for="AccountName"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="AccountCurrencyId" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="AccountCurrencyId" asp-items="Model.AvailableCurrencies" />
            <span asp-validation-for="AccountCurrencyId"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-3">
            <nop-label asp-for="TaxNumber" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="TaxNumber" />
            <span asp-validation-for="TaxNumber"></span>
        </div>
    </div>
</div>
