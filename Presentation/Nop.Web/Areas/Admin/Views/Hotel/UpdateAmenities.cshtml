@model Nop.Web.Areas.Admin.Models.Hotels.HotelModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Hotels.Hotels.EditHotelAmenities").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Hotels");
}

<form asp-controller="Hotel" asp-action="Edit" method="post" id="hotel-form">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Hotels.Hotels.EditHotelAmenities") - @Model.Name
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Hotels.Hotels.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync("AdminWidget", new { widgetZone = AdminWidgetZones.HotelAmenitiesDetailsBlock, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_ManageAmenities", Model)
</form>
